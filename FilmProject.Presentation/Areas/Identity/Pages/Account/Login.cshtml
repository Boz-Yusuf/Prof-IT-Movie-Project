@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="img/sidebar/tv-2.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>@localizer["login"]</h2>
                    <p>@localizer["welcome_message"]</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Login Section Begin -->

<section class="login spad">
    <div class="container">
        <div class="row">

            <div class="col-lg-6">
                <section class="login__form">
                    <form id="account" method="post">
                        <h3>@localizer["login"]</h3>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating" style="margin-bottom:20px">
                            <div class="input__item" style="margin-bottom:5px">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=@localizer["user_name"] />
                                <span><i class="fa fa-user"></i></span>
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>



                        <div class="form-floating " style="margin-bottom:20px">
                            <div class="input__item" style="margin-bottom:5px">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder=@localizer["password"] />
                                <span class="icon_lock"></span>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div>
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label text-white">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="site-btn">@localizer["login"]</button>
                        </div>
                        <div>
                            <hr /><hr />
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">@localizer["forgot_your_password"]</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">@localizer["resend_email_confirmation"]</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
            <div class="col-lg-6">
                <section class="login__register">
                    <h3>@localizer["do_not_have_account"]</h3>
                    <hr />
                    <button class="site-btn"> <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@localizer["Register_as_a_new_user"] </a></button>
                </section>
            </div>
        </div>
        <div />
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
