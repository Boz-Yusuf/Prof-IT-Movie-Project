@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    //Layout = null;
}
@using Microsoft.Extensions.Localization;

@inject IStringLocalizer<FilmProject.Presentation.SharedResource> localizer;

@*<h1>@ViewData["Title"]</h1>*@
<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="img/sidebar/tv-2.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Login</h2>
                    <p>Film Sitemize Hoşgeldiniz.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Login Section Begin -->

<section class="login spad">
    <div class="container">
        <div class="row">

            <div class="col-lg-6">
                <section class="login__form">
                    <form id="account" method="post">
                        <h3>@localizer["login"]</h3>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating" style="margin-bottom:20px">
                            <div class="input__item" style="margin-bottom:5px">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email address" />
                                <span class="icon_mail"></span>
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>



                        <div class="form-floating " style="margin-bottom:20px">
                            <div class="input__item" style="margin-bottom:5px">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                                <span class="icon_lock"></span>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div>
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label text-white">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="site-btn">Log in</button>
                        </div>
                        <div>
                            <hr /><hr />
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
            <div class="col-lg-6">
                <section class="login__register">
                    <h3>Dont’t Have An Account?</h3>
                    <hr />
                    <button class="site-btn"> <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></button>
                </section>
            </div>
        </div>
        <div />
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
