@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="img/normal-breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>@localizer["register"]</h2>
                    <p>@localizer["welcome_message"]</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->


<div class="signup spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h3>@localizer["create_new_account"]</h3>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-floating" style="margin-bottom:20px">
                            <div class="input__item" style="margin-bottom:5px">
                                <input asp-for="Input.UserName" class="form-control" aria-required="true" placeholder="@localizer["user_name"]"/>
                                <span class=""><i class="fa fa-user"></i></span>
                            </div>
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating" style="margin-bottom:20px">
                            <div class="input__item" style="margin-bottom:5px">
                                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder=@localizer["phone_number"]/>
                                 <span class="icon_phone"></span>
                            </div>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-floating" style="margin-bottom:20px">
                            <div class="input__item" style="margin-bottom:5px">
                                <input type="date" asp-for="Input.BirthDate" class="form-control" aria-required="true" placeholder=@localizer["birth_day"]/>
                                     <span class=""><i class="fa fa-calendar"></i></span>
                            </div>
                            <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                        </div>


                        <div class="form-floating" style="margin-bottom:20px">
                            <div class="input__item" style="margin-bottom:5px">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="@localizer["mail_address"]"/>
                                <span class="icon_mail"></span>
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating" style="margin-bottom:20px">
                            <div class="input__item" style="margin-bottom:5px">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder=@localizer["password"]/>
                                <span class="icon_lock"></span>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating" style="margin-bottom:20px">
                            <div class="input__item" style="margin-bottom:5px">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder=@localizer["check_password"]/>
                                <span class="icon_lock"></span>
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="site-btn">@localizer["register"]</button>
                        <br/>

                    </form>
                    <p class="mt-4">
                        <a asp-page="./Login">@localizer["do_you_already_have_an_account"]</a>
                    </p>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="login__social__links">
                    <h3>@localizer["login_with"]Login With:</h3>
                        <hr />
                    <ul>
                        <li><a href="#" class="facebook"><i class="fa fa-facebook"></i>@localizer["sign_in_with_facebook"] </a></li>
                        <li><a href="#" class="google"><i class="fa fa-google"></i> @localizer["sign_in_with_google"]</a></li>
                        <li><a href="#" class="twitter"><i class="fa fa-twitter"></i> @localizer["sign_in_with_twitter"]</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
