
@{
    ViewData["Title"] = "UpdateMoviePage";
}
@using FilmProject.Presentation.Models
@model UpdateMovieViewModel
<style>
		.category-list{
			margin-bottom: 10px;
		}
		.category-item{
			margin-right: 5px;
		}
	</style>


<div class="row wrapper border-bottom white-bg page-heading">

    <div class="col-lg-10">
        <h2>Filmler</h2>
        <ol class="breadcrumb">
            <li class="active breadcrumb-item">
                <a href="@Url.Action("GetMovieList", "Movie")"> <span class="nav-label" data-i18n="nav.layouts">Filmleri Listele</span></a>
            </li>
            <li class="active breadcrumb-item">
                <a href="#"> <span class="nav-label" data-i18n="nav.layouts">Update ~ @Model.MovieName </span></a>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
        @*<button type="button" class="btn btn-outline-info mt-5">Arşivi Göster</button>*@
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
             <div class="row" id="loadingMovieUpdateRender"> <div class="col-lg-12 d-flex justify-content-center ">@Html.Partial("_Loading")</div></div>
