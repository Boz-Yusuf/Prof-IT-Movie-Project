
@{
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Kullanıcılar Tablosu</h5>

                    <div class="ibox-tools">
                        
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i>Role göre filtrele</i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#" class="dropdown-item" data-role="">Tümü</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item" data-role="Admin">Admin</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item" data-role="User">Kullanıcı</a>
                            </li>
                        </ul>
                        
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="text" class="form-control" id="search-bar" placeholder="Kullanıcı adıyla ara...">
                            </div>
                        </div>
                    </div>
                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="8">
                        <thead>
                            <tr>

                                <th data-toggle="true">Kullanıcı Adı</th>
                                <th>Durumu</th>
                                <th data-hide="all">Email</th>
                                <th data-hide="all">Rolleri</th>
                                <th data-hide="all">Doğum Tarihi</th>
                                <th data-hide="all">Telefon Numarası</th>
                                <th data-hide="all">İki Adımlı Doğrulama</th>
                                <th>Aksiyon</th>
                            </tr>
                        </thead>
                        <tbody id="users">
                            
                            
                            
                            @*<tr>
                                <td>Gamma project</td>
                                <td>Aktif</td>
                                <td>email</td>
                                <td>roller</td>
                                <td>dogum</td>
                                <td>telefon</td>
                                <td>true false</td>
                                <td><a href="#"><i class="fa fa-check text-navy"></i></a></td>
                            </tr>*@
                            
                            
   
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    <div id="spinner" class="spinner">
                    </div>  
                    <!-- Modal -->
                    <div class="modal fade" id="roleModal" tabindex="-1" role="dialog" aria-labelledby="roleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="roleModalLabel">Yetkilerini Seçiniz</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body">
                            <div class="row">
                                <h5><span id="updateRoleUsername"></span> kullanıcısı için rol seçin.</h5>
                            </div>
                            <br /><br />
                            <div class="form-group">
                              <div class="row">
                                <div class="col-sm-12">
                                  <label class="radio-inline">
                                    <input type="radio" name="role" value="Admin"> Admin
                                  </label>
                                </div>
                              </div>
                              <div class="row">
                                <div class="col-sm-12">
                                  <label class="radio-inline">
                                    <input type="radio" name="role" value="User"> User
                                  </label>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div class="modal-footer">
                            <input type="hidden" id="userId" value="">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                            <button type="button" class="btn btn-primary" id="saveRoleBtn" disabled>Kaydet</button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- Modal -->



                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/footable/css/footable.core.css" />
        <link rel="stylesheet" href="~/css/CustomSpinner2.css" />
        
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/footable/css/footable.core.min.css" />
        <link rel="stylesheet" href="~/css/CustomSpinner2.css" />
    </environment>
}

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/footable/dist/footable.all.min.js"></script>
    </environment>

    <script type="text/javascript" src="~/js/GetUsersListForAdminJs.js" asp-append-version="true"></script>
}