@section Scripts{
    <script>
            
$(document).ready(function () {
  

       $("#myForm2").submit(function (event) {
              event.preventDefault();

           var viewmodel = {
               CategoryName: $("#category__name").val(),
            };

           $.ajax({
               url: "/Category/CreateCategory",
               type: "POST",
               contentType: "application/json; charset=utf-8",
               dataType: "json",
               data: JSON.stringify(viewmodel),
               success: function(data) {
                        
                     Swal.fire({
                        position: 'top-end',
                        icon: "success",
                        title: "Kategori Ekleme İşlemi Başarılı",
                        showConfirmButton: false,
                        timer: 2500
                    })
        
                   
               },
               error: function(jqXHR, textStatus, errorThrown) {
                   var text = jqXHR.responseText

                    Swal.fire({
                        position: 'top-end',
                        icon: "error",
                        title: text,
                        showConfirmButton: false,
                        timer: 2500
                    })
               }
            });
         
        });
  

});
    </script>
}
@using FilmProject.Presentation.Models
@model CategoryViewModel
<div class="container border border-primary">
    <div class="ibox-content">
        <form id="myForm2">
 

            <div class="form-group row">
                <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10"><input id="category__name" type="text" asp-for="CategoryName" class="form-control" ></div>
              

            </div>

            <div class="hr-line-dashed"></div>

            <div class="col-sm-4 col-sm-offset-2">
                <button class="btn btn-primary btn-sm" type="submit">Kategori Ekle</button>
            </div>
        </form>
    </div>


    <div class="ibox-content">
        <form method="get">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Kategory Guncelle</label>

                <div class="col-sm-10"><input type="text" class="form-control"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="col-sm-4 col-sm-offset-2">
                <button class="btn btn-primary btn-sm" type="submit">Kategori Guncelle</button>
            </div>
        </form>
    </div>
</div>