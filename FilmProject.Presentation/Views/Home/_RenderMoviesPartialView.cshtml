@using FilmProject.Presentation.Models
@model RenderMoviesViewModel


 @for (int i = 0; i < Model.Movies.Count(); i++)
{
  
    
     <div class="col-lg-4 col-md-6 col-sm-6">
     
                   <div class="product__item">
                                        <div class="product__item__pic set-bg" style="background-image:url('@Model.Movies.ElementAt(i).PhotoPath')">
                                            <div class="ep">@Model.OrtalamaList.ElementAt(i) / 10</div>
                                            <div class="comment"><i class="fa fa-comments"></i> @Model.Movies.ElementAt(i).Comments.Count</div>
                                            <div class="view"><i class="fa fa-heart"></i>@i</div>     @*Buraya kaç kişi bunu favorilerine eklemiş o listenebilir*@
                                       
                                        </div>
                                        <div class="product__item__text">
                                            <ul>
                                                @foreach (var x in Model.Movies.ElementAt(i).MovieCategories){
                                                    <li>@x.Category.CategoryName</li>
                                                }
                                            </ul>
                                            <h5><a href="#">@Model.Movies.ElementAt(i).MovieName</a></h5>
                                        </div>
                </div>
     </div>
 }

